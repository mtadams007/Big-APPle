<!DOCTYPE html>
<html>
  <head>
    <title>BigApple</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Comfortaa|Karla|Material+Icons|Rubik" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="bootstrap.bundle.min.js / bootstrap.bundle.js" type="text/css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">

      <div class="header-text">
        <div class="header-text-grey">BIG <div class="header-text-yellow">APP</div>LE</div></div>
      <img id="header-image" src="/assets/new-york-city-skyline.png" alt="New York City Skyline">
      <% if user_signed_in? %>
      <a href="<%=destroy_user_session_path%>" data-method="delete">
      <img src="/assets/cloud.png" class="logout-button" alt="Cloud Logout"></a>
      <%end%>
      </div>



    <div class="body">
    <div class="taxi">
      <img class="resize" src="/assets/taxi.png" alt="New York City Taxi">
    </div>





    <%= yield %>
    </div>
    <div id="footer">
      <div class="container">


        <a href="/">
        <button type="button" class="btn btn-warning">Create New Schedule</button></a>
        <a href="/schedules">
        <button type="button" class="btn btn-warning">View Saved Schedules</button></a>


      </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>BigApple</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Comfortaa|Karla" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" type="text/css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <div class="header-text">
        <div class="header-text-grey">BIG <div class="header-text-yellow">APP</div>LE</div></div>
      <img id="header-image" src="/assets/new-york-city-skyline.png" alt="New York City Skyline">
      </div>
    <div class="body">
    <div class="taxi">
      <img class="resize" src="/assets/taxi.png" alt="New York City Taxi">
    </div>

    

    

    <%= yield %>
    </div>
    <div id="footer">
    <div class="container">
      <p class="footer-block">Place sticky footer content here.</p>
    </div>
  </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
  </body>
</html>

<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

<div class="create-box">
<p class="create-box-text">Let's plan your day</p>
</div>

<div class="choose-schedule-box">
<%= form_tag("/activities/new", method: "post") do %>
<%= label_tag :location, "Hotel Zipcode", class: 'form-text' %>
<%= text_field_tag :location, nil, size: '44', placeholder: 'e.g. 10001', class: 'input' %>
<%= label_tag :term, "Morning Museum ", class: 'form-text' %>
<%= select_tag "Museum Type", "<option>Art</option><option>History</option><option>Science</option>".html_safe, prompt: '' %>
<%= label_tag :term, "Choose Lunch", class: 'form-text' %>
<%= select_tag "lunch", '<option value="restaurants">All</option>''<option value="mexican">Mexican</option>' '<option value="indpak">Indian</option>' '<option value="chinese">Chinese</option>''<option value="italian">Italian</option>,<option value="tradamerican">American</option>' '<option value="french">French</option>' '<option value="pizza">Pizza</option>' '<option value="burgers">Burgers</option>' '<option value="japanese">Japanese</option>' '<option value="thai">Thai</option>' '<option value="caribbean">Caribbean</option>'.html_safe, prompt: '' %>

<%= label_tag :term2, "Afternoon Museum", class: 'form-text' %>
<%= select_tag "Museum Type", "<option>Art</option><option>History</option><option>Science</option>".html_safe, prompt: '' %>
<%= label_tag :term, "Choose Dinner", class: 'form-text' %>

<%= select_tag "dinner", '<option value="restaurants">All</option>''<option value="mexican">Mexican</option>' '<option value="indpak">Indian</option>' '<option value="chinese">Chinese</option>''<option value="italian">Italian</option>,<option value="tradamerican">American</option>' '<option value="french">French</option>' '<option value="pizza">Pizza</option>' '<option value="burgers">Burgers</option>' '<option value="japanese">Japanese</option>' '<option value="thai">Thai</option>' '<option value="caribbean">Caribbean</option>'.html_safe, prompt: '' %>
<br>
<div id="submit"><%= submit_tag "Go", class: 'schedule-button' %></div>

<%end%>
</div>
